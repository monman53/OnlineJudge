#include <iostream>
using namespace std;

int par[10000];
int rank[10000];

void find(int x){
    if(par[x] == x){
        return x;
    }else{
        return par[x] = find(par[x]);
    }
}

void unite(int x,int y){
    x = find(x);
    y = find(y);
    if(x == y) return;

    if(rank[x] < lank[y]){
        par[x] = y;
    }else{
        par[y] = x;
        if(rank[x] == rank[y]) rank[x]++;
    }
}

int main(){
    int n,q;
    cin >> n >> q;
    for(int i=0;i<10000;i++){
        par[i] = i;
        rank[i] = 0;
    }

    int com,x,y;
    for(int i=0;i<q;i++){
        cin >> com >> x >> y;
        if(com == 0){
            unite(x,y);
        }else{
            cout << ((par(x) == par(y)) ? 1 : 0) << '\n';
        }
    }
    return 0;
}
