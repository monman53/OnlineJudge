#include <iostream>
#include <map>
using namespace std;

map<char, int> mcxi;

int ston(string s){
    int ret=0;
    int buf=1;
    for(int i=0;i<s.size();i++){
        if(s[i] == 'm' || s[i] == 'c' || s[i] == 'x'|| s[i] == 'i'){
            ret += buf*mcxi[s[i]];
            buf = 1;
        }else{
            buf = s[i] - '0';
        }
    }
    return ret;
}

string ntos(int n){
    string ret="";
    if(n/1000 == 1) ret += 'm';
    if(n/1000  > 1) ret += char('0' + n/1000) + 'm';

    if((n/100)%10 == 1) ret += 'c';
    if((n/100)%10  > 1) ret += char('0' + (n/100)%10) + 'c';

    if((n/10)%10 == 1) ret += 'x';
    if((n/10)%10  > 1) ret += char('0' + (n/10)%10) + 'x';

    if(n%10 == 1) ret += 'i';
    if(n%10  > 1) ret += char('0' + n%10) + 'i';

    return ret;
}

int main(){
    int n;
    mcxi['m'] = 1000;
    mcxi['c'] = 100;
    mcxi['x'] = 10;
    mcxi['i'] = 1;
    cin >> n;
    for(int i=0;i<n;i++){
        string sl,sr;
        cin >> sl >> sr;
        cout << ntos(ston(sl) + ston(sr)) << '\n';
    }
    return 0;
}
